@model IEnumerable<DataAccess.Entities.Item>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Items List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Item" asp-action="Create" class="btn btn-primary">Create New Item</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Borrower</th>
                    <th>Lender</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td width="25%">@item.ItemName</td>
                    <td width="25%">@item.Borrower</td>
                    <td width="25%">@item.Lender</td>
                    <td width="25%">
                        <div class="btn btn-group w-100">
                            <a asp-controller="Item" asp-action="Update" asp-route-Id="@item.ItemId" class="btn btn-primary mx-1">Update</a>
                            <a asp-controller="Item" asp-action="Delete" asp-route-Id="@item.ItemId" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No item created yet</p>
    }

</div>

