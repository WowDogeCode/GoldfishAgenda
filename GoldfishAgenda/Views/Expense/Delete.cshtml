@model GoldfishAgenda.Models.ExpenseReadDto

<form method="post" asp-action="DeletePost">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Expense</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="@Model.ExpenseName"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="@Model.Amount"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="@Model.ExpenseName" disabled class="form-control" />
                    </div>
                    <div class="col-6">
                        <input asp-for="@Model.Amount" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" asp-action="DeletePost" asp-route-Id="@Model.ExpenseId" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-info w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

